.navigationBar {
  display: flex;
  flex-direction: row;
  align-items: center;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 120rpx;
  z-index: 99;
  background-color: white;
  color: black;
  padding-top: 30rpx;
  border-bottom: 5rpx solid #3ba0df;
}

.navigationBar image {
  height: 50rpx;
  width: 25rpx;
  margin-left: 30rpx;
  margin-right: 20rpx;
  opacity: 0.8;
}

.page {
  padding: 30rpx;
  margin-top: 154rpx;
}

.title {
  margin-bottom: 20rpx;
  font-size: 40rpx;
  line-height: 56rpx;
}
.info {
  display: flex;
  flex-direction: row;
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: 0.5;
}
.info .source {
  flex-grow: 1;
}

.content-item {
  margin: 30rpx 0;
  font-size: 30rpx;
  line-height: 42rpx;
  text-align:justify;
  opacity: 0.8;
}

.content-item .strong {
  font-weight: bold;
}

.content-item image {
  width: 100%;
}